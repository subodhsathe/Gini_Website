{
  "name": "gini-backend",
  "version": "1.0.0",
  "description": "Backend server for Gini Website",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"node server.js\" \"cd frontend && npm start\"",
    "dev": "nodemon server.js",
    "client": "cd frontend && npm start",
    "frontend-build": "cd frontend && npm run build",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\"",
    "postinstall": "npm install --prefix frontend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
